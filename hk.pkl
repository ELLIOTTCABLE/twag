amends "package://github.com/jdx/hk/releases/download/v1.1.1/hk@1.1.1#/Config.pkl"
import "package://github.com/jdx/hk/releases/download/v1.1.1/hk@1.1.1#/Builtins.pkl"

local linters = new Mapping<String, Step> {
    ["sqlfluff"] = Builtins.sql_fluff
    ["cargo_clippy"] = Builtins.cargo_clippy
    ["cargo_fmt"] {
        glob = "*.rs"
        stage = "*.rs"
        workspace_indicator = "Cargo.toml"
        check = "cargo +nightly fmt --check --manifest-path {{workspace_indicator}}"
        fix = "cargo +nightly fmt --manifest-path {{workspace_indicator}}"
    }

    ["pkl"] {
        glob = "*.pkl"
        check = "pkl eval {{files}} >/dev/null"
    }
}

hooks {
    ["pre-commit"] {
        stash = "git"
        steps = linters
    }
    ["fix"] {
        fix = true
        steps = linters
    }
    ["check"] {
        steps = linters
    }
}
